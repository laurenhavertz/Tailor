<section class="heroes-container-1">
  <div class="heroes-1">

    <div class="container">

      <div id="carousel-example-generic" class="carousel slide">

        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <img src="http://cdn.volkswagen.co.uk/assets/en_gb/images/new_cars/golf_gti_vi/hero.png">
            <div class="carousel-caption">
              <h3>Picture is 960x560px</h3>
            </div>
          </div>
          <div class="item">
            <img src="http://johnathanclover.com/wp-content/uploads/galleries/post-216/Connor-021.jpg">
            <div class="carousel-caption">
              <h3>Picture is 960x480</h3>
            </div>
          </div>
          <div class="item">
             <img src="http://www.macstonephoto.com/picture/macstone_florida_myn-1.jpg?pictureId=15047445&asGalleryImage=true" alt="900x600px">
             <div class="carousel-caption">
              <h3>Picture is 960x480</h3>
             </div>
           </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
          <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
          <span class="icon-next"></span>
        </a>

      </div>

    </div>

    <div class="search-bar">
      <%= form_tag(controller: "venues", action: "search", method: "post") do %>
      <%= text_field_tag(:venue, nil, placeholder: 'search for a venue') %>
      <%= radio_button_tag(:gender, "men") %>
      <%= label_tag(:gender_male, "Men") %>
      <%= radio_button_tag(:gender, "women") %>
      <%= label_tag(:gender_female, "Women") %>
      <%= submit_tag("Search") %>
      <% end %>
   </div>

  </div>
</section>

